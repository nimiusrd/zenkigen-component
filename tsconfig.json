{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2015", "dom"],
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "react"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
