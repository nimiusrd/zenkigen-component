{
  "name": "@zenkigen-component/components",
  "version": "1.0.0",
  "source": "./src/index.ts",
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.mjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "generate-component": "hygen generator components",
    "build": "rimraf dist && microbundle --no-compress -f modern,esm,cjs --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --globals react/jsx-runtime=jsx"
  },
  "devDependencies": {
    "@types/react": "18.2.0",
    "hygen": "6.2.11",
    "microbundle": "0.15.1",
    "typescript": "5.0.4"
  },
  "peerDependencies": {
    "react": "18.2.0"
  },
  "dependencies": {
    "@zenkigen-component/icons": "file:../icons",
    "@zenkigen-component/theme": "file:../theme",
    "clsx": "1.2.1"
  }
}
