{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@3.6.3",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}' && prettier --check .",
    "type-check": "yarn workspaces foreach --exclude zenkigen-component run type-check",
    "build:all": "yarn workspaces foreach -pt --exclude zenkigen-component run build",
    "publish:all": "yarn workspaces foreach --exclude zenkigen-component npm publish",
    "storybook": "storybook dev",
    "create-component": "yarn workspace @zenkigen-inc/component-ui hygen generator components",
    "update-tokens": "yarn workspace @zenkigen-inc/component-config run build:tokens",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules"
  },
  "devDependencies": {
    "@babel/core": "7.22.20",
    "@storybook/addon-essentials": "7.4.2",
    "@storybook/addon-interactions": "7.4.2",
    "@storybook/addon-links": "7.4.2",
    "@storybook/addon-styling": "1.3.7",
    "@storybook/preview-api": "^7.4.2",
    "@storybook/react": "7.4.2",
    "@storybook/react-vite": "7.4.2",
    "@storybook/testing-library": "0.2.1",
    "@types/node": "18.17.17",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "autoprefixer": "10.4.15",
    "babel-loader": "9.1.3",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.13",
    "eslint-plugin-tailwindcss": "3.13.0",
    "postcss": "8.4.29",
    "prettier": "3.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.1",
    "storybook": "7.4.2",
    "tailwindcss": "3.3.3",
    "typescript": "5.2.2",
    "vite": "4.4.9",
    "vite-plugin-turbosnap": "1.0.3"
  }
}
