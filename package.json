{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}' && prettier --check .",
    "type-check": "yarn workspaces foreach run type-check",
    "build": "yarn workspaces foreach -pt run build",
    "storybook": "storybook dev",
    "create-component": "yarn workspace @zenkigen-component/components hygen generator components",
    "update-tokens": "yarn workspace @zenkigen-component/config run build:tokens",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules"
  },
  "devDependencies": {
    "@babel/core": "7.21.5",
    "@storybook/addon-actions": "7.0.7",
    "@storybook/addon-essentials": "7.0.7",
    "@storybook/addon-interactions": "7.0.7",
    "@storybook/addon-links": "7.0.7",
    "@storybook/addon-styling": "1.0.5",
    "@storybook/react": "7.0.7",
    "@storybook/react-vite": "7.0.7",
    "@storybook/testing-library": "0.1.0",
    "@types/node": "18.16.3",
    "@types/react-dom": "18.2.1",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.2",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.11",
    "eslint-plugin-tailwindcss": "3.11.0",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "5.0.0",
    "storybook": "next",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "vite": "4.3.3",
    "vite-plugin-turbosnap": "1.0.2"
  }
}
