{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}'",
    "type-check": "yarn workspaces foreach run type-check",
    "build": "yarn workspace @zenkigen-component/theme build && yarn workspaces foreach run build",
    "build:token": "token-transformer style-dictionary/tokens.json style-dictionary/transformed-token.json zen && style-dictionary build -c style-dictionary.json",
    "generate-component": "hygen generator components",
    "storybook": "storybook dev",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@babel/core": "7.21.4",
    "@storybook/addon-actions": "7.0.5",
    "@storybook/addon-essentials": "7.0.5",
    "@storybook/addon-interactions": "7.0.5",
    "@storybook/addon-links": "7.0.5",
    "@storybook/addon-styling": "1.0.1",
    "@storybook/react": "7.0.5",
    "@storybook/react-vite": "7.0.5",
    "@storybook/testing-library": "0.1.0",
    "@types/node": "18.15.11",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "@vitejs/plugin-react": "3.1.0",
    "autoprefixer": "10.4.14",
    "babel-loader": "9.1.2",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.11",
    "hygen": "6.2.11",
    "postcss": "8.4.22",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "next",
    "style-dictionary": "3.7.2",
    "tailwindcss": "3.3.1",
    "token-transformer": "0.0.32",
    "typescript": "5.0.4",
    "vite": "4.2.1",
    "vitest": "0.30.1"
  }
}
