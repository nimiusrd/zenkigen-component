{
  "name": "zenkigen-component",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint './packages/**/*.ts{,x}' && prettier --check .",
    "type-check": "yarn workspaces foreach run type-check",
    "build:all": "yarn workspaces foreach -pt run build",
    "publish:all": "yarn workspaces foreach npm publish",
    "storybook": "storybook dev",
    "create-component": "yarn workspace @zenkigen/components hygen generator components",
    "update-tokens": "yarn workspace @zenkigen/config run build:tokens",
    "build-storybook": "storybook build",
    "clean": "rimraf node_modules"
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@storybook/addon-actions": "7.1.0",
    "@storybook/addon-essentials": "7.1.0",
